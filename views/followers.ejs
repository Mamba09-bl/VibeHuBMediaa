<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title></title>

  <!-- Tailwind CDN -->
  <script src="https://cdn.tailwindcss.com"></script>

  <style>
    body {
      background-color: #121212;
      color: #E5E7EB;
      font-family: 'Inter', sans-serif;
    }
  </style>
</head>
<body class="flex flex-col items-center p-6">

  <!-- Navbar -->
  <nav class="w-full bg-gray-900 text-white shadow-lg mb-8">
    <div class="max-w-6xl mx-auto px-6 py-4 flex justify-between items-center">
      <h1 class="text-2xl font-bold text-blue-400">VibeHubMedia</h1>
      <div class="space-x-6">
        <a href="/home" class="hover:text-blue-400 transition">Home</a>
        <a href="/profile" class="hover:text-blue-400 transition">Profile</a>
      </div>
    </div>
  </nav>

  <!-- Followers Section -->
  <div class="w-full max-w-3xl bg-gray-800 p-6 rounded-2xl shadow-lg border border-gray-700">
    <h2 class="text-2xl font-bold text-center text-blue-400 mb-6">
    
    </h2>

    <% if (followers.length > 0) { %>
      <ul class="space-y-4">
        <% followers.forEach(follower => { %>
          <li class="flex items-center justify-between bg-gray-900 p-4 rounded-lg shadow hover:shadow-lg transition">
            
            <!-- Follower Info -->
            <div class="flex items-center space-x-4">
              <img src="/images/uploads/<%= follower.image || 'default.png' %>" 
     alt="Follower Picture"
     class="w-20 h-20 rounded-full border-4 border-blue-500 object-cover shadow-lg">

              <div>
                <p class="font-semibold text-lg"><%= follower.username %></p>
                <p class="text-sm text-gray-400"><%= follower.email %></p>
              </div>
            </div>

            <!-- Follow/Unfollow Button -->
     
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p class="text-center text-gray-400">No followers yet ðŸ˜”</p>
    <% } %>
  </div>

</body>
</html>
